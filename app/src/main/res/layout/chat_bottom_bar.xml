<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Bottom section with 4 ImageButtons and TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <!-- First option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/photoVideoButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_5"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/button5_desc"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="사진/동영상"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Second option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/accountTransferButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_7"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/button6_desc"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="계좌전송"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Third option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/addressTransferButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_8"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/button8_desc"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="다쥬페이"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Fourth option (배송지전송) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/documentTransferButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_15"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/button9_desc"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="배송지전송"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
