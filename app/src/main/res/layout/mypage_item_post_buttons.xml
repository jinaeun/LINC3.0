<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <!-- Container for Buttons at the top-right corner -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Edit Button -->
        <Button
            android:id="@+id/btn_delete_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/darker_gray"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/btn_edit_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:layout_toStartOf="@id/btn_delete_post"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/darker_gray" />


    </RelativeLayout>

    <!-- Image Section -->
    <ImageView
        android:id="@+id/iv_post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:hint="Post Image" />

    <!-- Post Title -->
    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <!-- Post Description -->
    <TextView
        android:id="@+id/tv_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Description"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>
