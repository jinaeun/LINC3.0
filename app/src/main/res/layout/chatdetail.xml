<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Block User Option -->
    <LinearLayout
        android:id="@+id/block_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_11"
            android:scaleType="fitXY"
            android:contentDescription="@string/button11_desc" />

        <Button
            android:id="@+id/block_user_button"
            android:layout_width="93dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="차단하기"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Report Option -->
    <LinearLayout
        android:id="@+id/report_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_12"
            android:scaleType="fitXY"
            android:contentDescription="@string/button12_desc" />

        <Button
            android:id="@+id/report_button"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="신고하기"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Search Option -->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_13"
            android:scaleType="fitXY"
            android:contentDescription="@string/button13_desc" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="검색하기"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Turn on Notifications Option -->
    <LinearLayout
        android:id="@+id/notifications_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_14"
            android:scaleType="fitXY"
            android:contentDescription="@string/button14_desc" />

        <Button
            android:id="@+id/notifications_button"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackground"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="알림켜기"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Leave Chat Option (Button) -->

    <!-- Cancel Button -->
    <Button
        android:id="@+id/leave_chat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="8dp"
        android:text="채팅방 나가기"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="16dp" />

</LinearLayout>
