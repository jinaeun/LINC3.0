<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permissions -->
    <!-- Android 13 이상에서는 READ_MEDIA_IMAGES 권한을 사용 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Android 12 이하에서 READ_EXTERNAL_STORAGE 사용 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="34">

        <activity
            android:name=".mypage.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:textColor="@color/black">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mypage.MyPage_RecentSeenProduct"
            android:exported="true" />
        <activity
            android:name=".mypage.MyPage_ForCustomer"
            android:exported="true" />
        <activity
            android:name=".mypage.MyPage_Post"
            android:exported="true" />
        <activity
            android:name=".mypage.MyPage_Editor"
            android:exported="true" />
        <activity
            android:name=".mypage.MyPage_Trade"
            android:exported="true" />
        <activity
            android:name=".mypage.MyPage_OnebyoneInquiry"
            android:exported="true" />
        <activity
            android:name=".mypage.MyPage"
            android:exported="true" />

        <!-- MainActivity: 앱의 진입점 -->
        <activity
            android:name="com.example.myapplication.home.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- BannerContentActivity -->
        <activity
            android:name="com.example.myapplication.home.home_BannerContentActivity"
            android:label="@string/banner_content_activity_label"
            android:exported="false" />

        <!-- WritePostActivity -->
        <activity
            android:name="com.example.myapplication.home.home_WritePostActivity"
            android:theme="@style/Theme.MyApplication"
            android:label="@string/write_post_activity_label"
            android:exported="false" />

        <!-- RecentItemsActivity -->
        <activity
            android:name="com.example.myapplication.home.home_RecentItemsActivity"
            android:label="@string/recent_items_activity_label"
            android:exported="false" />

        <!-- ItemDetailActivity -->
        <activity
            android:name="com.example.myapplication.home.home_ItemDetailActivity"
            android:label="@string/item_detail_activity_label"
            android:exported="false" />
    </application>

</manifest>