<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xmnls="http://schemas.android.com/apk/distribution"
    package="mp.p02.home1">

    <!-- Permissions -->
    <!-- Android 13 이상에서는 READ_MEDIA_IMAGES 권한을 사용 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Android 12 이하에서 READ_EXTERNAL_STORAGE 사용 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Main activity declaration with intent filter -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- BannerContentActivity -->
        <activity
            android:name=".home_BannerContentActivity"
            android:label="@string/banner_content_activity_label"
            android:exported="false" />

        <!-- WritePostActivity -->
        <activity
            android:name=".home_WritePostActivity"
            android:theme="@style/Theme.Home1"
            android:label="@string/write_post_activity_label"
            android:exported="false" />

        <!-- RecentItemsActivity -->
        <activity
            android:name=".home_RecentItemsActivity"
            android:label="@string/recent_items_activity_label"
            android:exported="false" />

        <!-- ItemDetailActivity -->
        <activity
            android:name=".home_ItemDetailActivity"
            android:label="@string/item_detail_activity_label"
            android:exported="false" />
        <!-- Other activity declarations -->
        <activity android:name=".Chat" />
        <activity android:name=".ChatDetailActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".AddressActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".PayActivity" />
        <activity android:name=".ProductDetailActivity" />
        <activity android:name=".ReportActivity" />
    </application>

</manifest>
